<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_postImage"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/textView_postDate_left"
        android:layout_width="8dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/textView_postTitle_left"
        app:layout_constraintStart_toStartOf="@+id/imageView_postImage" />

    <TextView
        android:id="@+id/textView_postDate"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/spoqa_han_sans_regular"
        android:text="20/05/30"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_postTitle"
        app:layout_constraintStart_toEndOf="@+id/textView_postDate_left" />

    <ImageView
        android:id="@+id/textView_postDate_right"
        android:layout_width="8dp"
        android:layout_height="28dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/textView_postTitle_right"
        app:layout_constraintStart_toEndOf="@+id/textView_postDate" />

    <ImageView
        android:id="@+id/textView_postTitle_left"
        android:layout_width="8dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_postImage"
        app:layout_constraintStart_toStartOf="@+id/imageView_postImage" />

    <TextView
        android:id="@+id/textView_postTitle"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/spoqa_han_sans_regular"
        android:text="- 글 내용 -"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_postImage"
        app:layout_constraintStart_toEndOf="@+id/textView_postTitle_left" />

    <ImageView
        android:id="@+id/textView_postTitle_right"
        android:layout_width="8dp"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_postImage"
        app:layout_constraintStart_toEndOf="@+id/textView_postTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>